{
  "info": {
    "name": "Town Service API",
    "_postman_id": "b9b5a6d7-6a2c-41c0-9e2c-111111111111",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Endpoints for listing locations, moving characters, and checking occupants (with lobby support)."
  },
  "variable": [
    { "key": "baseUrlTown", "value": "http://localhost:4001" },
    { "key": "lobbyId", "value": "2001" },
    { "key": "locationId", "value": "1" },
    { "key": "characterId", "value": "101" },
    { "key": "userId", "value": "55" }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /health",
          "request": {
            "method": "GET",
            "url": "{{baseUrlTown}}/health"
          },
          "event": [
            {
              "listen": "test",
              "script": { "exec": ["pm.test('Status is 200', () => pm.response.to.have.status(200));"] }
            }
          ]
        }
      ]
    },
    {
      "name": "Locations",
      "item": [
        {
          "name": "List all locations (for a lobby)",
          "request": {
            "method": "GET",
            "url": "{{baseUrlTown}}/api/town?lobbyId={{lobbyId}}"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "const res = pm.response.json();",
                  "if (res.locations && res.locations.length && !pm.collectionVariables.get('locationId')) {",
                  "  pm.collectionVariables.set('locationId', res.locations[0].locationId);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get location occupants",
          "request": {
            "method": "GET",
            "url": "{{baseUrlTown}}/api/town/lobbies/{{lobbyId}}/locations/{{locationId}}/occupants"
          },
          "event": [
            {
              "listen": "test",
              "script": { "exec": ["pm.test('Status 200', () => pm.response.to.have.status(200));"] }
            }
          ]
        }
      ]
    },
    {
      "name": "Movements",
      "item": [
        {
          "name": "Move character",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrlTown}}/api/town/move",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"lobbyId\": {{lobbyId}},\n  \"characterId\": {{characterId}},\n  \"userId\": {{userId}},\n  \"name\": \"Selene\",\n  \"locationId\": {{locationId}}\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": { "exec": ["pm.test('Status 200', () => pm.response.to.have.status(200));"] }
            }
          ]
        },
        {
          "name": "Movement log (debug)",
          "request": {
            "method": "GET",
            "url": "{{baseUrlTown}}/api/town/movements"
          },
          "event": [
            {
              "listen": "test",
              "script": { "exec": ["pm.test('Status 200', () => pm.response.to.have.status(200));"] }
            }
          ]
        }
      ]
    }
  ]
}
